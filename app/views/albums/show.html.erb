<%= simple_format(current_user.email)%>
<%= simple_format(@album.name)%>
<%= link_to user_albums_url do %>
  Albums
<% end %>

<%= form_for [@album, @image], :html => { :class => 'form-horizontal', multipart: true } do |f| %>
  <div class="control-group">
    <%= f.label :Upload, :class => 'control-label' %>
    <div class="controls">
      <%= file_field_tag 'images[]', type: :file, multiple: true %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                user_albums_path, :class => 'btn btn-mini' %>
  </div>
  <% end %>
