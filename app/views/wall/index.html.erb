<h1>My Wall </h1>

<%= form_for @post, url: {controller: "wall", action: "create"} do |form| %>
  <%= form.label :message, "Create a new post" %>
  <%= form.text_area :message, :rows =>4, :cols => 50 %>
  <%= form.submit "Submit" %>
<% end %>

<% @wall_posts.each do |post| %>
  <div class="post">
    <div class="post__head">
      <span class="post__head__user">
        <%= post.user.email %>
      </span>
      <span class="post__head__date">
        posted at: <%= post.posted_at %>
      </span>
      <br>
    </div>
    <div class="post__body">
      <%= simple_format(post.message)%>
    </div>
</div>
<% end %>
