<h1>My albums</h1>
<br/>
<%= link_to "New album", new_user_album_path %>
<br/><br/>
<%if @albums %>
  <ul>
     <% @albums.each do |album| %>
        <li>
           <div>
	      <%= link_to album.name, user_album_url(current_user, album) %>
	      <%= album.description %><br>
	      <%= album.posted_at %><br>
           </div>
        </li>
     <% end %>
  </ul>
<% end %>
