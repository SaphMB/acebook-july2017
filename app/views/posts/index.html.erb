<% @posts.each do |post| %>
  <div class="post">
    <div class="post__head">
      <span class="post__head__user">
        (username here)
      </span>
      <span class="post__head__date">
        posted at: <%= post.posted_at %>
      </span>
      <br>
    </div>
    <div class="post__body">
      <%= post.message %>
    </div>
  </div>
<% end %>

<%= link_to new_post_path do %>
  New post
<% end %>
